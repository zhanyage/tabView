<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorAccent">
        <TextView
            android:id="@+id/tv_select_tab_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8px"
            android:layout_marginBottom="8px"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="71dp"
            android:background="@drawable/tab_selected_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8px"
            android:layout_marginBottom="8px"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_gravity="center"
            android:background="@drawable/tab_bg"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_current_session_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:gravity="center"
                android:text="1111111"/>
            <TextView
                android:id="@+id/tv_session_record_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="2222222222"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_leave_message_record_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:text="3333"
                android:gravity="center"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>